      <h1>{{pageTitle}}</h1>
      <h2>{{kennel_abbreviation}}:{{pageSubTitle}}</h2>




        <div id="map" class="col-sm-10">
        </div>

        <style>
          #map{
            height: 100%;
          }


        </style>


        <script>
          var map;
          function initMap(){
            map = new google.maps.Map(document.getElementById('map'),{
              zoom: 10,
              center: new google.maps.LatLng( {{avg_lat}}, {{avg_lng}} )
              //mapTypeId: 'terrain'
            });

            //var latLng = new google.maps.LatLng(2.8, -187.3);
            //var marker = new google.maps.Marker({
          //    position: latLng,
            //  map: map
            //});

          {% for hashEventValue in the_hashes %}
            var marker = new google.maps.Marker({
              //position: new google.maps.LatLng(7,-188);,
              position: {lat: {{hashEventValue.LAT}}, lng:{{hashEventValue.LNG}}},
              map: map
            });
          {% endfor %}




          }

        </script>


        <script async defer src="https://maps.googleapis.com/maps/api/js?key={{geocode_api_value}}&callback=initMap">
        </script>


{% endblock %}
