{% extends "fullwidth.twig" %}

{% block content %}


<script type = "text/javascript" language = "javascript">



  //Call these functions upon page load
  $(document).ready(function() {
    //Convert the main table into a data table
    $('#the_main_table').DataTable({
      "paging":   true,
      "pageLength": 50,
      "lengthMenu": [ [50, 100, 500, -1], [50, 100, 500, "All"]],
      "aaSorting": [],
      "responsive": true,
      "autoWidth": false,
      "processing": true,
      "serverSide": true,
      "ajax": {
          "url": "/{{kennel_abbreviation}}/listhashes2",
          "type": "POST"
      },
      "createdRow": function(row,data,dataIndex){
        /*
        if(data.IS_HYPER > 0){
          $(row).css("color","brown");
        }
        */
      },
      "columns": [
        {
          "data": "KENNEL_EVENT_NUMBER",
          "orderData": [5],
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='/{{kennel_abbreviation}}/hashes/"+oData.HASY_KY+"'>"+oData.KENNEL_EVENT_NUMBER+"</a>");
          }

       },
       { "data": "HOUND_COUNT",
         "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
           $(nTd).html("<a href='/{{kennel_abbreviation}}/listhashers/byhash/"+oData.HASY_KY+"'>"+oData.HOUND_COUNT+"</a>");
         }
       },
       { "data": "HARE_COUNT",
         "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
           $(nTd).html("<a href='/{{kennel_abbreviation}}/listhares/byhash/"+oData.HASY_KY+"'>"+oData.HARE_COUNT+"</a>");
         }
       },

        { "data": "EVENT_LOCATION" ,
          "render": function (nTd, sData, oData, iRow, iCol) {
            var returnValue = "foo";
            var maximumLength = 30;
            var inputValue = oData.EVENT_LOCATION;
            if (inputValue != null && inputValue.length > maximumLength){
              returnValue = inputValue.substr( 0, maximumLength) +'…' ;
            }else{
              returnValue = inputValue;
            }
            return returnValue;
          }
        },
        { "data": "SPECIAL_EVENT_DESCRIPTION",
          "render": function (nTd, sData, oData, iRow, iCol) {
            var returnValue = "foo";
            var maximumLength = 30;
            var inputValue = oData.SPECIAL_EVENT_DESCRIPTION;
            if (inputValue != null && inputValue.length > maximumLength){
              returnValue = inputValue.substr( 0, maximumLength) +'…' ;
            }else{
              returnValue = inputValue;
            }
            return returnValue;
          }
        },
        { "data": "EVENT_DATE",
          "render": function (nTd, sData, oData, iRow, iCol) {
            return (oData.EVENT_DATE_FORMATTED);
          }
        },
        { "data": "EVENT_CITY" }
      ]
    });

  });


</script>

    <div class="table-responsive">
    <h3>{{pageTitle}}</h3>
    <h4>{{pageSubTitle}}</h4>
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Hash Number</th>
          <td>Hounds</td>
          <td>Hares</td>
          <td>Location</td>
          <td>Description</td>
          <td>Date</td>
          <td>City</td>
        </tr>
      </thead>
      <tbody>
    </table>
    </div>

{% endblock %}
