{% extends "fullwidth.twig" %}

{% block content %}


<script type = "text/javascript" language = "javascript">



  //Call these functions upon page load
  $(document).ready(function() {
    //Convert the main table into a data table
    $('#the_main_table').DataTable({
      "paging":   true,
      "pageLength": 25,
      "lengthMenu": [ [25, 50, 100, 500, -1], [25, 50, 100, 500, "All"]],
      "aaSorting": [],
      "responsive": true,
      "autoWidth": false,
      "processing": true,
      "serverSide": true,
      "ajax": {
          "url": "/{{kennel_abbreviation}}/jumboCountsTable",
          "type": "POST"
      },
      "columns": [
        {
          "data": "HASHER_NAME",
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='/{{kennel_abbreviation}}/hashers/"+oData.HASHER_KY+"'>"+oData.HASHER_NAME+"</a>");
          }

       },
        { "data": "HASH_COUNT" },
        {% for hashType in hashTypes %}
          { "data": "{{ hashType.HASH_TYPE_NAME }}_HASH_COUNT" },
        {% endfor %}
        { "data": "HARE_COUNT" },
        {% for hareType in hareTypes %}
          { "data": "{{ hareType.HARE_TYPE_NAME }}_HARE_COUNT" },
        {% endfor %}
        {
          "data": "LATEST_EVENT_DATE",
          "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
            $(nTd).html("<a href='/{{kennel_abbreviation}}/hashes/"+oData.LATEST_HASH_KEY+"'>"+oData.LATEST_KENNEL_EVENT_NUMBER+"</a>");
          }

       },
      ]
    });

  });


</script>

    <div class="table-responsive">
    <h3>{{pageTitle}}</h3>
    <h4>{{pageSubTitle}}</h4>
    <table class="table table-condensed table-hover" id="the_main_table">
      <thead>
        <tr>
          <th>Hasher Name</th>
          <td>Hash Count</td>
          {% for hashType in hashTypes %}
            <td>{{ hashType.HASH_TYPE_NAME }} Hash Count</td>
          {% endfor %}
          <td>Haring Count</td>
          {% for hareType in hareTypes %}
            <td>{{ hareType.HARE_TYPE_NAME }} Hare Count</td>
          {% endfor %}
          <td>Latest Hash</td>
        </tr>
      </thead>
      <tbody>
    </table>
    </div>

{% endblock %}
