          minlength: jQuery.validator.format("Enter at least {0} characters")
      },
      eventDate:{
          required: "Provide a date",
          dateFormat: "Provide the right format"
      },
      eventTime:{
          required: "Provide a time",
          timeFormat: "Provide the right format"
